@model IEnumerable<HMS_MVC.Models.RoomDetail>

@{
    ViewData["Title"] = "GetRoomList";
}

<div>
    <h2 class="text-primary">All Room List</h2>
</div>

<div class="container p-3">
    <div>
        <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #00b9ff;float: right" asp-controller="Admin" asp- asp-action="GetRoomList">Get All Room List</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Roomnumber
                    </th>
                    <th>
                        Roomstatus
                    </th>
                    <th>
                        Roomtype
                    </th>
                    
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.Roomnumber</td>
                        <td>@detail.Roomstatus</td>
                        <td>@detail.Roomtype</td>
                        

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Admin" asp-route-Id="@detail.Roomnumber" asp-action="UpdateRoom" class="btn btn-primary mx-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-controller="Admin" asp-route-Id="@detail.Roomnumber" asp-action="DeleteRoom" class="btn btn-danger mx-3">
                                    <i class="far fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>