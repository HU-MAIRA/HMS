@model HMS_MVC.Models.Booking

@{
    ViewData["Title"] = "Add Booking Details";
}

<form method="post" asp-controller="Guest" asp-action="AddBooking" style="background-color: lavenderblush">
    <div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <b><label asp-for="RoomNumber"></label> </b>
                    </div>
                    <div class="col-8">
                        <input asp-for="RoomNumber" class="form-control" />
                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <b> <label asp-for="BookingDate"></label> </b> 
                    </div>
                    <div class="col-8">
                        <input asp-for="BookingDate" class="form-control" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <b> <label asp-for="Checkin"></label></b> 
                    </div>
                    <div class="col-8">
                        <input asp-for="Checkin" class="form-control" />
                        <span asp-validation-for="Checkin" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <b>  <label asp-for="Checkout"></label></b> 
                    </div>
                    <div class="col-8">
                        <input asp-for="Checkout" class="form-control" />
                        <span asp-validation-for="Checkout" class="text-danger"></span>
                    </div>
                </div>

                 <div class="form-group row">
                    <div class="col-4">
                        <b><label asp-for="Bookingstatus"></label>  </b>   
                    </div>
                    <div class="col-8">
                        <input asp-for="Bookingstatus" class="form-control" />
                        <span asp-validation-for="Bookingstatus" class="text-danger"></span>
                    </div>
                </div>

                 <div class="form-group row">
                    <div class="col-4">
                        <b> <label asp-for="Custid"></label> </b> 
                    </div>
                    <div class="col-8">
                        <input asp-for="Custid" class="form-control" />
                        <span asp-validation-for="Custid" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Add" />
                    </div>
                    @if (ViewBag.Message != null)
                    {
                        <a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #ff8d00;float: right" asp-controller="Admin" asp-action="GetAllStudents">Get Student Details</a>
                        <script type="text/javascript">
                                                window.onload = function () {
                                                alert("@ViewBag.Message");
                                                };
                        </script>
                    }
                </div>
                </div>
            </div>
        </div>
    </form>
